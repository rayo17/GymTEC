<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroClienteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/user_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_profileicon_imgview"
                    android:layout_width="150sp"
                    android:layout_height="90sp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="top"
                    app:srcCompat="@drawable/person_lightmode" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="1sp"
                    android:scrollIndicators="top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65sp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/user_Name_edittext"
                            style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:hint="*Nombre 1"
                            android:inputType="textCapWords"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/user_2ndName_edittext"
                            style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="65sp"
                            android:layout_weight="1"
                            android:hint="Nombre 2"
                            android:inputType="text|textCapWords"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/user_Apellido1_edittext"
                            style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:hint="*Apellido 1"
                            android:inputType="text|textCapWords"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/user_Apellido2_edittext"
                            style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="65sp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="*Apellido 2"
                            android:inputType="text|textCapWords"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_Cedula_edittext"
                        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:ems="10"
                        android:hint="*Cédula"
                        android:inputType="number|textPersonName"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/user_Edad_edittext"
                        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="65sp"
                        android:ems="10"
                        android:hint="*Edad"
                        android:inputType="number|textPersonName"
                        android:textSize="18sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="1sp">

                        <TextView
                            android:id="@+id/user_date_text"
                            android:layout_width="185dp"
                            android:layout_height="65sp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="*Fecha de nacimiento"
                            android:textColor="?attr/editTextColor"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/user_Fecha_nacimiento_btn"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Seleccionar"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="?android:attr/textColorSecondary" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="Dirección"
                        android:textAlignment="center"
                        android:textColor="?attr/editTextColor"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65sp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/user_provincia_edittext"
                            style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="65sp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="*Provincia"
                            android:inputType="text|textCapWords"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/user_canton_edittext"
                            style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="65sp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="*Cantón"
                            android:inputType="text|textCapWords"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/user_distrito_edittext"
                            style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="65sp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="*Distrito"
                            android:inputType="text|textCapWords"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/user_email_edittext"
                        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="65sp"
                        android:ems="10"
                        android:hint="*Correo electrónico"
                        android:inputType="textEmailAddress"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="150sp"
                    android:layout_height="90sp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_fitness_center_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/user_weight_edittext"
                        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="*Peso"
                        android:inputType="number"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/user_imc_edittext"
                        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="*IMC"
                        android:inputType="number"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="150sp"
                    android:layout_height="65sp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_password_24" />

                <EditText
                    android:id="@+id/user_passwordregistry_edittext"
                    style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="65sp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="*Contraseña"
                    android:inputType="textPassword"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/user_registrarse_btn"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="65sp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:backgroundTint="#DBC7FF"
                    android:onClick="addNewCliente"
                    android:padding="10dp"
                    android:text="@string/Register"
                    android:textAlignment="center"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp"
                    app:rippleColor="#AA9BC6" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>