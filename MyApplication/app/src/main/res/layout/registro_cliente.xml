<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroCliente">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/user_personal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_profileicon_imgview"
                android:layout_width="150sp"
                android:layout_height="90sp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:gravity="top"
                app:srcCompat="@drawable/person_lightmode" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="1sp"
                android:scrollIndicators="top">

                <EditText
                    android:id="@+id/user_Name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/user_Apellidos_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:ems="10"
                    android:hint="Apellidos"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/user_Cedula_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:ems="10"
                    android:hint="@string/prompt_cedula"
                    android:inputType="number|textPersonName" />

                <EditText
                    android:id="@+id/user_Edad_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="65sp"
                    android:ems="10"
                    android:hint="@string/prompt_age"
                    android:inputType="number|textPersonName" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1sp">

                    <TextView
                        android:id="@+id/user_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="65sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/prompt_birthdate"
                        android:textAlignment="textStart"
                        android:textColor="?attr/editTextColor"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/user_Fecha_nacimiento_btn"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Seleccionar"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="DirecciÃ³n"
                    android:textAlignment="center"
                    android:textColor="?attr/editTextColor"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65sp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/user_provincia_edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/prompt_province"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/user_canton_edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/prompt_canton"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/user_distrito_edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/prompt_district"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <EditText
                    android:id="@+id/user_email_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="65sp"
                    android:ems="10"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150sp"
                android:layout_height="90sp"
                android:layout_weight="1"
                app:srcCompat="@drawable/baseline_fitness_center_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/user_weight_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="@string/prompt_weight"/>

                <EditText
                    android:id="@+id/user_imc_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="@string/prompt_IMC"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>